{% from "govuk/components/date-input/macro.njk" import govukDateInput %}

{% macro validatedDateInput(opts) %}
  {% set id = opts.id %}
  {% set title = opts.title %}
  {% set prefix = opts.prefix %}
  {% set hintText = opts.hintText %}

  {% set day = opts.day %}
  {% set month = opts.month %}
  {% set year = opts.year %}

  {% set dayLabel = prefix + "Day" if prefix  else "day" %}
  {% set monthLabel = prefix + "Month" if prefix  else "month" %}
  {% set yearLabel = prefix + "Year" if prefix  else "year" %}

  {% if opts.validationErrors %}
    {% set dayError = opts.validationErrors | findError(dayLabel) if opts.validationErrors | findError(dayLabel) else '' %}
    {% set monthError = opts.validationErrors | findError(monthLabel) if opts.validationErrors | findError(monthLabel) else '' %}
    {% set yearError = opts.validationErrors | findError(yearLabel)  if opts.validationErrors | findError(yearLabel) else '' %}
    {% set dateError = opts.validationErrors | findError(id)  if opts.validationErrors | findError(id) else '' %}
  {% endif %}

  {% macro joinErrors(errors) %}
    {% if errors %}{{ errors.text }}{% endif %}
  {% endmacro %}

  {% set mergedDateError = joinErrors(dateError) | lower | trim %}
  {% set additionalDateError = false %}
  {% set additionalDayError = "day" in mergedDateError %}
  {% set additionalMonthError = "month" in mergedDateError %}
  {% set additionalYearError = "year" in mergedDateError %}
  {% if additionalDayError == false and additionalMonthError == false  and additionalYearError == false and mergedDateError %}
    {% set additionalDateError = true %}
  {% endif %}

  {{
    govukDateInput({
      id: id,
      name: id,
      fieldset: {
        legend: {
          text: title.text,
          isPageHeading: title.isPageHeading,
          classes: title.classes
        }
      } if title else undefined,
      hint: {
        text: hintText
      } if hintText else undefined,
      errorMessage: {
        html: '<span id="date-error" class="govuk-error-message">' + joinErrors(dayError) | trim  + '</span>
              <span id="day-error" class="govuk-error-message">' + joinErrors(monthError) | trim  + '</span>
              <span id="month-error" class="govuk-error-message">' + joinErrors(yearError) | trim  + '</span>
              <span id="year-error" class="govuk-error-message">' + joinErrors(dateError) | trim  + '</span>'
      } if dayError or monthError or yearError or dateError else undefined,
      items: [
        {
          id: dayLabel,
          label: 'Day',
          name: dayLabel,
          classes: 'govuk-input--width-2' + (' govuk-input--error' if dayError or additionalDayError or additionalDateError),
          value: day,
          autocomplete: 'bday-day',
          attributes: {
            'aria-describedby': 'dob-error' if dayError or additionalDayError or additionalDateError else undefined
          }
        },
        {
          id: monthLabel,
          label: 'Month',
          name: monthLabel,
          classes: 'govuk-input--width-2' + (' govuk-input--error' if monthError or additionalMonthError or additionalDateError),
          value: month,
          autocomplete: 'bday-month',
          attributes: {
            'aria-describedby': 'dob-error' if monthError or additionalMonthError or additionalDateError else undefined
          }
        },
        {
          id: yearLabel,
          label: 'Year',
          name: yearLabel,
          classes: 'govuk-input--width-4' + (' govuk-input--error' if yearError or additionalYearError or additionalDateError),
          value: year,
          autocomplete: 'bday-year',
          attributes: {
            'aria-describedby': 'dob-error' if yearError or additionalYearError or additionalDateError else undefined
          }
        }
      ]
    })
  }}
{% endmacro %}
